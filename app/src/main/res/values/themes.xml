<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NetworkScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/medium_gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="buttonStyle">@style/Theme.NetworkScanner.AppCompatButton</item>
    </style>

    <style name="Theme.NetworkScanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NetworkScanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NetworkScanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NetworkScanner.AppCompatButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>